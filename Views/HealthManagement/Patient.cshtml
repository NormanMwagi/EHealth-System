<!-- begin page-header -->
<h1 class="page-header"><i class="fa-regular fa-book"></i> SHERIA <small> MATTERS</small></h1>
<!-- end page-header -->
<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="@Url.Action("Matters", "ClientManagement")" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fas fa-undo-alt"></i></a>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Patient</h4>
    </div>
    <div class="panel-body">
        <p></p>
        <div class="form-horizontal">
            <div class="row">
                <a id="editabledatatable_new" class="btn btn-sm btn-success" data-toggle="modal" data-target="#capture-record">
                    <i class="fa fa-plus"></i> Add New
                </a>
                <br />
                <br />
            </div>
            <div class="row">
                <table id="editabledatatable" class="table table-striped table-hover table-bordered table-condensed">
                    <thead>
                        <tr role="row">
                            <th style="width:auto">Hospital</th>
                            <th style="width:auto">Department</th>
                            <th style="width:auto">Doctor</th>
                            <th style="width:auto">Name</th>
                            <th style="width:auto">Age</th>
                            <th style="width:auto">Residency</th>
                            <th style="width:auto">Phone Number</th>
                            <th style="width:auto">Insurance</th>
                            <th style="width:auto">Insurance Number</th>
                            <th style="width:auto">Health Issue</th>
                            <th style="width:auto">Book Appointment</th>
                            <th style="width:auto"></th>
                            <th style="width:auto"></th>

                        </tr>
                    </thead>
                </table>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="modal fade" id="capture-record" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Capture Patient</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                             <input id="recordid" type="hidden" name="recordid" />
                                             <label class="form-control-label" for="hospital_id">Hospital</label>
                                             <select id="hospital_id" name="hospital_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1"></select>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="department_id">Department</label>
                                             <select id="department_id" name="department_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1"></select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="doctor_id">Doctor</label>
                                             <select id="doctor_id" name="doctor_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1"></select>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="name">Name</label>
                                             <input id="name" type="text" name="name" class="form-control" placeholder="Enter Name" />
                                        </div>
                                    </div>
                                    <div class="row">
                                         <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="age">Age</label>
                                             <input id="age" type="text" name="age" class="form-control" placeholder="Enter Age" />
                                         </div>
                                         <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="residency">Residency</label>
                                             <input id="residency" type="text" name="residency" class="form-control" placeholder="Enter Residency" />
                                         </div>
                                    </div>
                                    <div class="row">
                                         <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="phone_no">Phone Number</label>
                                             <input id="phone_no" type="text" name="phone_no" class="form-control" placeholder="Enter Phone Number" />
                                         </div>
                                         <div class="col-md-6 col-sm-6 col-xs-12">
                                             <label class="form-control-label" for="insurance">Insurance</label>
                                             <select id="insurance" name="insurance" class="form-control">
                                                 <option value="">Please Select Type</option>
                                                 <option value="Yes">Yes</option>
                                                 <option value="No">No</option>
                                             </select>
                                         </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="insurance_no">Insurance Number</label>
                                            <input id="insurance_no" type="text" name="insurance_no" class="form-control" placeholder="Enter Insurance Number" />
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="health_issue">Health Issue</label>
                                            <input id="health_issue" type="text" name="health_issue" class="form-control" placeholder="Enter Health Issue" />
                                        </div>
                                    </div>
                                    <div class="row">                                        
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="book_appointment_date">Appointment Date</label>
                                            <input id="book_appointment_date" type="text" name="book_appointment_date" class="form-control" data-date-format="yyyy-mm-dd" style="width: 100%"  placeholder="Enter Appointment Date" />
                                        </div>
                                    </div>
                                   
                                </div>

                                <div class="modal-footer">
                                    <a href="#" class="btn btn-white btn-sm" id="cancel" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Cancel</a>
                                    <a href="#" class="btn btn-success btn-sm" id="save"><i class="fa fa-save"></i>&nbsp;Save</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>
<!-- end panel-body -->
<!-- end panel -->
