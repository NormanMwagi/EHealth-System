@section PageStyles{
    <link href="~/assets/static/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/assets/static/css/pretty-checkbox.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />

}
<!-- begin page-header -->
<h1 class="page-header"><i class="fa-regular fa-book"></i> Open <small> Matters </small></h1>
<!-- end page-header -->
<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="@Url.Action("OpenMatters", "Matters")" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fas fa-undo"></i></a>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Matters Record</h4>
    </div>
    <div class="panel-body">
        <p></p>
        @* <div class="form-horizontal">*@
        <div class="row">
            <a id="editabledatatable_new" class="btn btn-sm btn-success" data-toggle="modal" data-target="#capture-matters">
                <i class="fa fa-plus"></i> Add New Matter
            </a>
            <br />
            <br />
        </div>
        <div class="row">
            <table id="editabledatatable" class="table table-striped table-hover table-bordered table-condensed">
                <thead>
                    <tr role="row">
                        <th style="width:auto">Matter Name</th>
                        <th style="width:auto">Matter Number</th>
                        <th style="width:auto">Assinged To</th>
                        <th style="width:auto">Client</th>
                        <th style="width:auto">Start Date</th>
                        <th style="width:auto">Close Date</th>
                        <th style="width:auto">Practice Area</th>
                        <th style="width:auto">Matter Status</th>
                        <th style="width:auto"></th>
                        <th style="width:auto"></th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="row">
            <div class="modal fade" id="capture-matters" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle"></i></button>
                            <h4 class="modal-title">Start New Matter</h4>
                        </div>
                        <div class="modal-body">
                            <div class="panel panel-inverse">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <input id="recordid" type="hidden" name="recordid" />
                                                <label for="matter_name"><b>Matter Name</b></label>
                                                <input type="text" id="matter_name" name="matter_name" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="matter_number"><b>Matter Number</b></label>
                                                <input type="text" id="matter_number" name="matter_number" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="assigned_to"><b>Assigned To</b></label>
                                                <select id="assigned_to" name="assigned_to" class="form-control selectpicker" style="width: 100%"></select>
                                                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="assigned_to"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="client_id"><b>Client</b></label>
                                                <select id="client_id" name="client_id" class="form-control selectpicker" style="width: 100%"></select>
                                                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="client_id"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="start_date"><b>Start Date</b></label>
                                                <input type="text" id="start_date" name="start_date" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="close_date"><b>Close Date</b></label>
                                                <input type="text" id="close_date" name="close_date" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="practice_area"><b>Practice Area</b></label>
                                                <select id="practice_area" name="practice_area" class="form-control selectpicker" style="width: 100%"></select>
                                                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="practice_area"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="matter_status"><b>Matter Status</b></label>
                                                <select id="matter_status" name="matter_status" class="form-control selectpicker" style="width: 100%"></select>
                                                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="matter_status"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label for="matter_billing"><b>Matter Billing</b></label>
                                                <select id="matter_billing" name="matter_billing" class="form-control selectpicker" style="width: 100%"></select>
                                                <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="matter_billing"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label class="form-control-label" for="description">Description</label>
                                            <textarea id="description" rows="3" name="description" placeholder="Enter Description" class="form-control"></textarea>
                                        </div>
                                    </div>  
                                    <div class="row">
                                        <br />
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-white btn-sm" id="cancel" data-dismiss="modal"><i class="fa fa-times-circle"></i>&nbsp;Cancel</a>
                            <a href="#" class="btn btn-success btn-sm" id="save"><i class="fa fa-check-circle"></i>&nbsp;Submit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*</div>*@
        <hr>
    </div>
    <!-- end panel-body -->
</div>

<!-- end panel -->

@section PageScripts{
    <script src="~/assets/static/plugins/select2/dist/js/select2.min.js"></script>
    <script src="~/assets/static/plugins/dataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/static/plugins/dataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/static/plugins/dataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/static/js/table-manage-responsive.demo.min.js"></script>
    <script src="~/assets/static/plugins/bootstrap-sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/assets/static/js/apps.min.js"></script>
    <script src="~/assets/static/js/jquery.blockUI.js"></script>
    <script src="~/assets/static/js/matters/open-matters.js"></script>

}